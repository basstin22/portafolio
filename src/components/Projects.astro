---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import React from "./icons/React.astro";  // Verifica que la ruta esté correcta
import MongoDB from "./icons/MongoDB.astro";  // Verifica que la ruta esté correcta
import HTML from "./icons/HTML.astro";  // Verifica que la ruta esté correcta
import CSS from "./icons/CSS.astro";  // Verifica que la ruta esté correcta
import Java from "./icons/Java.astro";  // Verifica que la ruta esté correcta




const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {  // Agregar React aquí
    name: "React",
    class: "bg-blue-600 text-white",
    icon: React,  // Aquí se utiliza el ícono de React
  },
    MONGODB: {
    name: "MongoDB",
    class: "bg-green-600 text-white",
    icon: MongoDB,  // Ícono de MongoDB
  },
    HTML: {
    name: "HTML",
    class: "bg-orange-600 text-white",
    icon: HTML,  // Ícono de HTML
  },
   CSS: {
    name: "CSS",
    class: "bg-blue-500 text-white",
    icon: CSS,  // Ícono de CSS
  },
   JAVA: {
    name: "Java",
    class: "bg-red-600 text-white",  // Cambia el color si es necesario
    icon: Java,  // Ícono de Java
  },

}

const PROJECTS = [
  {
    title: "ERP personalizado para empresa de camiones ",
    description:
      " ERP completo que permite crear y gestionar facturas, cotizaciones,estados de vehículos, gastos de combustible, kilometrajes de conductores, estados de pago y gráficos. ",
    link: "https://youtu.be/pNZ-NcbyMok",
    image: "/captura_erp1.png",
    tags: [TAGS.REACT, TAGS.NEXT,TAGS.MONGODB, ],
  },
  {
    title: "Movimientos de Tierra DyC",
    description:
      "Diseño y desarrollo de sitio web corporativo con estructuración de páginas, layout visual, tipografías, iconos, imágenes, funciones como redirección directa a redes sociales y de contacto, prácticas de SEO básicas.",
    link: "https://www.movimientosdetierradyc.com/",
    image: "/movimientodetierra_dyc.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVA ],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



